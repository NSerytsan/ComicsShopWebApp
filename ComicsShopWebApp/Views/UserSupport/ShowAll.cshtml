@using System.Globalization;
@model IEnumerable<UserSupport>
@{
    ViewData["Title"] = "Звернення";
}

<div class="container p-3">
    <div calss="row p-4">
        <div class="col-6">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
    </div>
</div> 

<div class="container">
    @foreach (var message in Model)
    {
        <div class="card border-primary mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <p class="card-text">@message.Date.ToString(new CultureInfo("uk-Ua"))</p>
                    </div>
                    <div class="col">
                        <p class="card-text text-end">@message.User.Email</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">@message.TextMessage</p>
            </div>
        </div>
    }
</div>

