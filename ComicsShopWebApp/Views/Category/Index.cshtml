@inject SignInManager<User> signInManager;
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Категорії";
}

<div class="container p-3">
    <div calss="row p-4">
        <div class="col-6">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            <div class="row justify-content-end">
                <div class="col-7 text-end">
                    <div class="mb-3">
                        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                            Створити нову категорію
                        </a>
                    </div>
                </div>
            </div>
            <div class="row justify-content-end mb-3">
                <div class="col-7">
                    <form method="post" asp-action="Import">
                        <div class="input-group">
                            <label class="input-group-text">Оберіть exel-файл для заватаження</label>
                            <input type="file" class="form-control">
                            <button class="btn btn-primary" type="submit">Завантажити</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row justify-content-end mb-3">
                <div class="col-7 text-end">
                    <a class="btn btn-primary" asp-action="Export">Завантажити інформацію в файл</a>
                </div>
            </div>
        }
    </div>
</div>

<table class="table table-borderless table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Категорія
            </th>
            <th>
                Опис категорії
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.CategoryName
                </td>
                <td width="50%">
                    @obj.CategoryDescription
                </td>
                <td>
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                        </div>
                    }
                </td>
                <td>
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-primary"><i class="bi bi-trash3"></i></a>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>