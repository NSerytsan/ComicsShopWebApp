@model Category

@{
	ViewData["Title"] = "Видалити категорію";
}

<div class="container">
	<form method="post" asp-action="Delete">
		<input asp-for="Id" hidden />
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-primary">@ViewData["Title"]</h2>
				<hr />
			</div>
			@if (Model.Products.Count() > 0)
			{
				<div class="alert alert-danger" role="alert">
					Неможливо видалити категорію
				</div>
			}
			<div class="mb-3">
				<label asp-for="CategoryName"></label>
				<input asp-for="CategoryName" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="CategoryDescription"></label>
				<input asp-for="CategoryDescription" disabled class="form-control" />
			</div>
			@if (@Model.Products.Count() == 0)
			{
				<button type="submit" class="btn btn-danger" style="width:150px">Видалити</button>
			}
			<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:110px">
				Скасувати
			</a>
		</div>
	</form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}