@model Category

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Видалити категорію</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="CategoryName"></label>
			<input asp-for="CategoryName" disabled class="form-control"/>
		</div>
		<div class="mb-3">
			<label asp-for="CategoryDescription"></label>
			<input asp-for="CategoryDescription" disabled class="form-control"/>
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Видалити</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:110px">
			Скасувати
		</a>
	</div>
</form>