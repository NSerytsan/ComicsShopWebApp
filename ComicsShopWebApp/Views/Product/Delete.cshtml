@model Product

@{
	ViewData["Title"] = "Видалити продукт";
}

<div class="container">
	<form method="post">
		<input hidden asp-for="Id" />
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-primary">@ViewData["Title"]</h2>
				<hr />
			</div>
			<div class="mb-3">
				<label asp-for="ProductName"></label>
				<input asp-for="ProductName" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="Cost"></label>
				<input asp-for="Cost" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="NumLeft"></label>
				<input asp-for="NumLeft" disabled class="form-control" />
			</div>
			<button type="submit" class="btn btn-danger" >Видалити</button>
			<a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
				Скасувати
			</a>
		</div>
	</form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}