@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div calss="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Продукти</h2>
        </div>
        <div class="text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Створити новий продукт
            </a>
        </div>
    </div>
</div> 

<table class="table table-borderless table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Назва продукту
            </th>
            <th>
                Категорії
            </th>
            <th>
                Вартість
            </th>
            <th>
                Залишилося
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.ProductName
                </td>
                <td width="50%">
                    @obj.Category
                </td>
                <td width="50%">
                    @obj.Cost
                </td>
                <td width="50%">
                    @obj.NumLeft
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Index" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-cart3"></i></a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Реадагувати</a>
                    </div>
                </td>
                    <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary">Видалити</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

